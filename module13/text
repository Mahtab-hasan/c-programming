#include <stdio.h>

// This is a function that takes two integer parameters and adds them together.
void add(int a, int b) 
{
    a = a + b; // Add a and b together, and store the result in a
    printf("Inside the add function: %d\n", a); // Print the result of the addition
}

int main() 
{
    int x = 10, y = 5; // Declare two integer variables, x and y, and initialize them with the values 10 and 5 respectively
    add(x, y); // Call the add function with x and y as parameters
    printf("Outside the add function: %d\n", x); // Print the value of x after the function call
    return 0;
}
